#include <iostream> //LIRAZAN
#include <fstream>
#include <cstring>
#include <sys/stat.h>
#include <conio.h>

void setFilePermissions(const char* filename, mode_t mode) {
    if (chmod(filename, mode) !=0) {
      perror("Error setting file permissions");
        } else {
        std::cout << filename << " permissions updated successfully."
      <<std::endl;
  }
}

int main() {
  char filename[50];
  int choice;

    std::cout << "\t\tMAIN MENU OF PERMISSIONS\n";
    std::cout << "\t----------------------------------\n";
    std::cout << "1. Only Read\n";
    std::cout << "2. Only Write\n";
    std::cout << "3. Exit\n";
    std::cout << "Enter your choice: ";
    std::cin >> choice;

    switch (choice) {
      case 1:
        std::cout << "Enter file name: ";
        std::cin >> filename;
        setFilePermissions(filename, S_IRUSR); //Read-only for user
        break;
      case 2:
        std::cout << "Enter file name: ";
        std::cin >> filename;
        setFilePermissions(filename, S_IWUSR); //Write-only for user
        break;
    case 3:
      exit(0);
      break;
    default:
    std::cout << "Invalid choice." << std::endl;
      }


  getch();
  return 0;
}
